/* pages/chat/chat.wxss */
.top{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  background: #D7D7D7;
}
.line1{
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.name{
  font-size: 30rpx;
  margin-left: 20rpx;
}
.number{
  font-size: 30rpx;
  justify-content: center;
  margin-left: 135rpx;
}
.set{
  width: 32rpx;
  height: 32rpx;
  margin-left: 270rpx;
}
.line2{
  width: 100%;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center
}
.pull{
  width: 64rpx;
  height: 40rpx;
  margin: auto;
}
.message{
  width: 100%;
  height: 1000rpx;
}


.bottom{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #e5e5e5;
}
.input{
  width: 500rpx;
  height: 80rpx;
  border: 2rpx solid #D7D7D7;
  margin-left: 30rpx;
  margin-top: 10rpx;
}
.emoj{
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.send{
  width: 100rpx;
  height: 50rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}